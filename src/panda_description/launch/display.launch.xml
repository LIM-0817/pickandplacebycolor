<?xml version="1.0"?>
<!-- rviz2에 로봇 띄우기 -->
<launch>
    <arg name="rviz_config_path" default="$(find-pkg-share panda_description)/rviz/display.rviz"/>

    <!-- robot state publisher 노드 -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher"
                    name="robot_state_publisher" output="screen">
        <param name="robot_description" value="$(command 'xacro $(find-pkg-share panda_description)/urdf/panda.urdf.xacro is_ignition:=True')"/>
    </node>

    <!-- joint_state_publisher을 gui로 띄우는 node -->
    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"
                    name="joint_state_publisher" output="screen"/>

    <!-- rviz 노드 args에 -d 'rviz config file'로 config파일 지정-->
    <node pkg="rviz2" exec="rviz2" name="rviz2" output="screen"
                    args="-d $(var rviz_config_path)"/>
</launch>
